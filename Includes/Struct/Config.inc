
                ifndef _STRUCT_CONFIG_
                define _STRUCT_CONFIG_

                struct FGameConfig
KeyMenu         DB VK_ENTER                                                     ; клавиша по умолчанию "меню/пауза" (0)
KeyAcceleration DB VK_CAPS_SHIFT                                                ; клавиша по умолчанию "ускорить"
KeyBack         DB VK_SYMBOL_SHIFT                                              ; клавиша по умолчанию "oтмена"
KeySelect       DB VK_SPACE                                                     ; клавиша по умолчанию "выбор"
KeyRight        DB VK_D                                                         ; клавиша по умолчанию "вправо"
KeyLeft         DB VK_A                                                         ; клавиша по умолчанию "влево"
KeyDown         DB VK_S                                                         ; клавиша по умолчанию "вниз"
KeyUp           DB VK_W                                                         ; клавиша по умолчанию "вверх"
; -----------------------------------------
;      7    6    5    4    3    2    1    0
;   +----+----+----+----+----+----+----+----+
;   | .. | .. | .. | .. | .. | .. | I1 | I0 |
;   +----+----+----+----+----+----+----+----+
;
;   L1-L0 - [1-0]   - язык
;   I1-I0 - [3-2]   - инпут
;   I1,I0   [0,1]   - тип инпута
;                       00 - клавиаура
;                       01 - клавиаура переопределили
;                       10 - kempston 8 кнопок
;                       11 -
; -----------------------------------------
Options         DB #00
; -----------------------------------------
;      7    6    5    4    3    2    1    0
;   +----+----+----+----+----+----+----+----+
;   | .. | .. | .. | .. | .. | .. | .. | GP |
;   +----+----+----+----+----+----+----+----+
;
;   GP    - [0]     - VFX частицы
; -----------------------------------------
Graphics        DB #00
Seed            DW #0000                                                        ; seed для генерации текущей сессии
Frequency       DB #00                                                          ; частота шума перлина (устаревшая)

; младший байт (offset) - FSprite.Offset
; старший байт (flags)  - FSprite.Data.Page / FCompositeSpriteInfo.Flags
; -----------------------------------------
; старший байт
;      7    6    5    4    3    2    1    0
;   +----+----+----+----+----+----+----+----+
;   | GM | .. | .. | .. | OX | .. | .. | .. |
;   +----+----+----+----+----+----+----+----+
;
;   GM      [7]     - общая маска для спрайта
;   OX      [3]     - если 0, то OR иначе OR & XOR вывод спрайта
; -----------------------------------------
Sprite          FWFlags                                                         ; флаги работы с спрайтами
CompositeY      DB #00                                                          ; смещение по вертикали для композитного спрайта
Animation       DW #0000                                                        ; массив анимация для композитного спрайта
                DW #0000
SpriteCounter   DB #00                                                          ; флаг отрисовки всего композитного спрайта
                                                                                ;   #00 - полностью все нарисованы
                                                                                ;   #FF - частично нарисован
                                                                                ; либо счётчик отрисованных спрайтов
                ends

                endif ; ~_STRUCT_CONFIG_
